<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_bluegrey50"
    tools:context=".view.fragments.SplashScreenFragment">

    <ImageView
        android:id="@+id/splashImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/trip_reminder_logo" />

    <TextView
        android:id="@+id/TripReminderSplashTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/splashImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/no_trips_margin_32dp"
        android:text="@string/TripReminderSplashText"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />
</RelativeLayout>